# QupidLineage Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Spring standard)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/lineage_extractor
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=lineage123

# API Keys (Required)
GROQ_API_KEY=your-groq-api-key-here
GITHUB_TOKEN=your-github-token-here

# Docker Configuration
DOCKER_IMAGE_NAME=sql-dependency-extractor
DOCKER_BACKEND_URL=http://host.docker.internal:8080/api

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
WEBHOOK_BASE_URL=http://localhost:8080/api/webhook

# Logging Configuration
LOGGING_LEVEL_COM_LINEAGE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO

# Security Configuration (for production)
# JWT_SECRET=your-jwt-secret-key
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Performance Configuration
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Connection Pool Settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000
